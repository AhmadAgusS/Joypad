config BT_HID_APP
	bool
	prompt "Enable/Disable BT HID APP"
	default n
	help
	This option enable or disable bthid app

config BT_SPP_APP
	bool
	prompt "Enable/Disable BT SPP APP"
	default n
	help
	This option enable or disable btspp app

config USB_HID_APP
	bool
	prompt "Enable/Disable USB HID APP"
	default n
	help
	This option enable or disable usbhid app

config BT_BLE_VENDER_GATT_APP
	bool
	prompt "Enable/Disable BT BLE VENDER GATT APP"
	default n
	help
	This option enable or disable usbhid app